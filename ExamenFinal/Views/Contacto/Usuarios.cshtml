<div class="container">
    <a href="/Cuentas/Index">volver</a>
    <a href="/Contacto/Usuarios" class="btn btn-primary">Agregar amigos</a>
    <a href="/Contacto/MisSolicitudes" class="btn btn-warning">Solicitudes de amistad</a>
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Solicitar amistad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td><a href="/Contacto/EnviarSolicitud?idamigo=@item.Id_User">Enviar Solicitud</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>