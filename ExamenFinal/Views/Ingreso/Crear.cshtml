
<form method="post" action="/Ingreso/Crear?idCuenta=@ViewBag.Id_Cuenta">
    <div class="form-group">
        <label for="Username">Fecha y hora</label>
        <input type="datetime-local" name="Fecha_Hora" class="form-control form-control-line">
    </div>
    <div class="form-group">
        <label for="Username">Monto</label>
        <input type="text" name="Monto" class="form-control form-control-line" id="Username">
    </div>
    <div class="form-group">
        <label for="Username">Descripción</label>
        <input type="text" name="Descripcion" class="form-control form-control-line" id="Username">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-lg btn-primary text-uppercase fs-12 fw-600">Registrar</button>
    </div>
</form>
